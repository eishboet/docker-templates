<?xml version="1.0" encoding="utf-8"?>
<Container version="0.1">
  <Name>nginx</Name>
  <Overview>
    Nginx is a web server which can also be used as a reverse proxy, load balancer, mail
    proxy and HTTP cache.

    Nginx is free and open-source software, released under the terms of the 2-clause BSD
    license. A large fraction of web servers use NGINX,often as a load balancer.
  </Overview>
  <Registry>
    http://localhost:5000/registry/nginx
  </Registry>
  <Privileged>
    False
  </Privileged>
  <WebUI>
    http://[IP]:[PORT:80]/
  </WebUI>
  <Network>
      bridge
  </Network>
  <Icon>
    https://github.com/eishboet/docker-templates/tree/master/icons/nginx-icon.png
  </Icon>
  <Category>
    Network:Web, Status:Beta
  </Category>
  <Config
    Type="Variable"
    Name="PUID"
    Default="99"
    Description="PUID"
    Required="true">
      99
  </Config>
  <Config
    Type="Variable"
    Name="PGID"
    Default="100"
    Description="PGID"
    Required="true">
      100
  </Config>
  <Config
    Type="Path"
    Name="nginx.conf"
    Target="/etc/nginx/"
    Default="/etc/nginx/"
    Mode="ro"
    Description="Path to nginx.conf"
    Required="true">
      /mnt/usr/appdata/nginx/nginx.conf
  </Config>
  <Config
    Type="Path"
    Name="fastcgi_params"
    Target="/etc/nginx/"
    Default="/etc/nginx/"
    Mode="ro"
    Description="fastcgi_params"
    Required="true">
      /mnt/usr/appdata/nginx/fastcgi_params
  </Config>
  <Config
    Type="Path"
    Name="/var/www/html/"
    Target="/var/www/html/"
    Default="/var/www/html/"
    Mode="ro"
    Description="www folder"
    Required="true">
      /mnt/usr/appdata/nginx/www
  </Config>
  <Config
    Type="Port"
    Name="nginx http"
    Target="80"
    Default="80"
    Mode="tcp"
    Description="http port 80"
    Display="always"
    Required="true">
      80
  </Config>
 </Container>
